<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="transaction"
            type="com.example.abdullah.budgetary.data.Transaction" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/transaction_list_item_height">

        <LinearLayout
            android:layout_width="@dimen/transaction_list_item_date_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{transaction.getHourInfo()}"
                tools:text="HH:MM" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@{transaction.getDateRelationInfo()}"
                tools:text="Day / Month" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@{transaction.getAmountInfo()}"
                tools:text="â‚º1000.12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:scrollHorizontally="false"
                android:ellipsize="end"
                android:text="@{transaction.getTransactionInfo()}"
                android:textSize="12sp"
                tools:text="Lorem ipsum dolor sit amet" />
        </LinearLayout>
        <ImageView
            android:contentDescription="@{transaction.category.description}"
            android:layout_width="@dimen/transaction_list_item_icon_width"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@{transaction.getCategory().iconName}"
            android:tint="@{transaction.getCategory().categoryColor}"
            tools:src="@drawable/money"
            />


    </LinearLayout>
</layout>